<link href="/main.css" rel="stylesheet" />

<%= JSON.stringify(글목록) %> <%- include('nav.ejs') -%>
<body class="grey-bg">
  <div class="white-bg">
    <% for(let i = 0; i < 글목록.length; i++){ %>
    <div class="list-box">
      <h4>
        <a href="/detail/<%= 글목록[i]._id %>"> <%= 글목록[i].title %> </a>
      </h4>
      <a href="/edit/<%= 글목록[i]._id %>">✏️</a>

      <p><%= 글목록[i].content %></p>
    </div>
    <% } %>
  </div>
</body>
